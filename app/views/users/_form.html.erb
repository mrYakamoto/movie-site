
<%= form_for :user, url: users_path, html: {:class => 'form-horizontal'}  do |f| %>
  <fieldset>

  <div class="form-group">
    <label class="col-md-4 control-label" for="username">Username</label>
    <div class="col-md-6">
    <input id="username" name="user[username]" type="text" placeholder="SamLowry" class="form-control input-md" required="">

    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="email">Email Address</label>
    <div class="col-md-6">
    <input id="email" name="user[email]" type="text" placeholder="cobra@kai.com" class="form-control input-md" required="">

    </div>
  </div>

  <!-- Password input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="password_plaintext">Password</label>
    <div class="col-md-6">
      <input id="password_plaintext" name="password_plaintext" type="password" placeholder="" class="form-control input-md" required="">

    </div>
  </div>

  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="login"></label>
    <div class="col-md-4">
      <button id="login" name="login" class="btn btn-primary">Save</button>
    </div>
  </div>

  </fieldset>
<% end %>

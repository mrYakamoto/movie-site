<div class="container">
  <div class="row page-header">
    <h1>San Francisco Film Calendar</h1>
  </div>
</div>

<div class="row buzz-box  clearfix">
  <div class="col-xs-12">

    <ul class="thumbnails clearfix">

      <%@top_three_films_arr.each do |film_obj|%>

      <li class="col-xs-4 col-sm-3 col-md-2">
        <div class="thumbnail">

          <a href="#"><img src="<%=film_obj.poster_url%>" alt=""></a>

        </div>
      </li>

      <%end%>

      <li class="hidden-xs col-sm-3 col-md-2 ">
        <div class="thumbnail">
          <a href="#"><img src="<%=@fourth_top_film.poster_url%>" alt=""></a>
        </div>
      </li>

      <% @fifth_and_sixth_top_films_arr.each do |film_obj| %>
      <li class="hidden-xs hidden-sm col-md-2 ">
        <div class="thumbnail">
          <a href="#"><img src="<%=film_obj.poster_url%>" alt=""></a>
        </div>
      </li>

      <%end%>


    </ul>


  </div>
</div><!-- /buzz-box -->

<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><%=@this_month_str%></div>

      <!-- Table -->
      <div id="no-more-tables">
        <table class="table table-bordered col-sm-12 table-condensed cf" id="<%=@this_month_num%>">
          <thead class="cf">
            <tr>
              <th>sunday</th>
              <th>monday</th>
              <th>tuesday</th>
              <th>wednesday</th>
              <th>thursday</th>
              <th>friday</th>
              <th>saturday</th>
            </tr>
          </thead>
          <tbody>
            <%@numbers.each_slice(7) do |slice|%>
            <tr>
              <td data-title="sunday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box" id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice[0].class == Array ? slice.shift()[0]:slice.shift()%></span>
              </td>

              <td data-title="monday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box" id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

              <td data-title="tuesday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box"id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

              <td data-title="wednesday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box"id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

              <td data-title="thursday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box"id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

              <td data-title="friday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box"id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

              <td data-title="saturday,
              <%= handle_past_month_info(slice) ||  "#{@this_month_str.downcase} #{slice[0]}"%>"
              class="clearfix date-box"id="td<%=slice[0]%>">
                <span class='date hidden-xs'><%=slice.shift()%></span>
              </td>

            </tr>
            <%end%>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>







<div class="container theater-nav-container">
  <ul class="nav nav-pills nav-justified">
    <!-- <li class="active">
      <a class="theater-pill" href="#">all listings</a>
    </li> -->
    <li class="theater-tab-box active">
      <%= link_to 'all screenings', root_path, class:"theater-tab", :remote => true %>
    </li>
    <% @theaters.each do |theater| %>
    <li class="theater-tab-box">
      <%= link_to theater.name, fetch_screenings_path(:theater_id => theater.id), class: "theater-tab", :remote => true %>
    </li>
    <% end %>
  </ul>
  <% if current_user %>
  <div class="user-cal btn btn-success center col-xs-12"><%= link_to "#{current_user.username}'s Calendar", current_user, class: "theater-tab", :remote => true %></div>
  <% else %>
  <div class="user-cal btn btn-warning col-xs-12">
    <%= link_to 'Log-in to save movies to your own calendar', new_session_path %>
  </div>
  <% end %>
</div>
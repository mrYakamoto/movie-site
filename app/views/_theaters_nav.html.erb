<div id="affix-placeholder"></div>
<div class="theater-nav-container clearfix" id="theater-nav-container">


  <% if current_user %>
  <div class="user-cal btn btn-success center col-xs-6 col-sm-12 pull-right"><%= link_to "#{current_user.username}'s Watchlist", current_user, class: "theater-tab", :remote => true %></div>
  <% else %>
  <div class="user-cal btn btn-warning pull-right col-xs-6 col-sm-12">
    <%= link_to 'Your Watchlist', new_session_path %>
  </div>
  <% end %>


  <div class="theater-tab-box pull-left collapsed col-xs-6 col-sm-12">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle pull-left col-xs-12" data-toggle="collapse" data-target="#theater-nav">
        <span class="theater-tab">THEATERS</span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="theater-nav">
      <ul class="nav nav-pills nav-justified">
        <input type="hidden" id="selected_menu_item" value="=$selectedMenuId; ?>" />
        <li class="theater-tab-box active">
          <%= link_to 'all screenings', root_path, class:"theater-tab", :remote => true %>
        </li>
        <% @theaters.each do |theater| %>
        <li class="theater-tab-box">
          <%= link_to theater.name, fetch_screenings_path(:theater_id => theater.id), class: "theater-tab", :remote => true %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>